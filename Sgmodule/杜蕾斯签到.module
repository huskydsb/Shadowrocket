[Script]

# ==========================
# 杜蕾斯 Cookie / 参数获取
# ==========================

杜蕾斯_获取Cookie = type=http-request, pattern=^https:\/\/vip\.ixiliu\.cn\/mp\/user\/info$, script-path=https://raw.githubusercontent.com/axtyet/Quan-X/main/cyz_13724/scripts/dls.js, requires-body=true, enable={{{获取Cookie开关}}}, timeout=60

杜蕾斯_拦截签到Body = type=http-request, pattern=^https:\/\/vip\.ixiliu\.cn\/mp\/sign\/applyV2$, script-path=https://raw.githubusercontent.com/axtyet/Quan-X/main/cyz_13724/scripts/dls.js, requires-body=true, enable={{{获取Cookie开关}}}, timeout=60

# ==========================
# 杜蕾斯签到定时任务
# ==========================

杜蕾斯会员中心签到 = type=cron, script-path=https://raw.githubusercontent.com/axtyet/Quan-X/main/cyz_13724/scripts/dls.js, cronexpr={{{签到任务时间}}}, timeout=120

[MITM]
hostname = %APPEND% vip.ixiliu.cn